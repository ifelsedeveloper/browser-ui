{
  "private": true,
  "name": "brave-ui-wrapper",
  "version": "0.0.0",
  "description": "List of reusable React components to empower your brave UI",
  "author": "Brave Software",
  "contributors": [
    {
      "name": "Cezar Augusto",
      "email": "cezar@brave.com"
    }
  ],
  "license": "MPL-2.0",
  "scripts": {
    "copy-style": "cpx \"components/**/*.css\" package",
    "bootstrap": "lerna bootstrap",
    "build": "lerna exec --parallel -- tsc",
    "transpile": "npm run copy-style && tsc",
    "dev": "tsc -w",
    "check-security": "nsp check",
    "deploy": "storybook-to-ghpages -s public -o .out",
    "lint": "standard --fix --verbose",
    "publish": "lerna publish && npm run deploy",
    "start": "start-storybook -p 9091 -c .storybook",
    "test": "jest --verbose -t",
    "test-all": "jest --verbose",
    "coverage": "jest --coverage --verbose"
  },
  "devDependencies": {
    "@dump247/storybook-state": "^1.3.0",
    "@storybook/addon-actions": "^3.3.15",
    "@storybook/addon-info": "^3.3.15",
    "@storybook/addon-knobs": "^3.3.15",
    "@storybook/addon-options": "^3.3.15",
    "@storybook/react": "^3.3.15",
    "@storybook/storybook-deployer": "^2.3.0",
    "@types/enzyme": "^3.1.9",
    "@types/jest": "^22.2.2",
    "@types/react": "^16.1.0",
    "@types/react-dom": "^16.0.4",
    "@types/react-test-renderer": "^16.0.1",
    "awesome-typescript-loader": "^4.0.1",
    "babel-loader": "^7.1.4",
    "cpx": "^1.5.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.3",
    "lerna": "^2.0.0",
    "nsp": "^3.2.1",
    "pre-commit": "^1.2.2",
    "pre-push": "^0.1.1",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "react-test-renderer": "^16.3.0",
    "standard": "^11.0.1",
    "ts-jest": "^22.4.2",
    "typescript": "^2.8.1"
  },
  "pre-commit": {
    "run": [
      "lint",
      "build"
    ]
  },
  "pre-push": {
    "run": [
      "lint",
      "test-all",
      "check-security"
    ]
  },
  "standard": {
    "ignore": [
      "package/**/*.js"
    ]
  },
  "storybook-deployer": {
    "gitUsername": "Brave Nespresso Drinker and Static Deployer Bot",
    "gitEmail": "deploying-for-the-deployer-lord@brave.com",
    "commitMessage": "Update Styleguide"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "resetMocks": true,
    "resetModules": true,
    "collectCoverage": false,
    "collectCoverageFrom": [
      "components/**/*.tsx",
      "!components/**/index.ts"
    ],
    "testMatch": [
      "<rootDir>/components/**/spec.tsx"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/.testconfig/testSetup.js",
    "setupFiles": [
      "<rootDir>/.testconfig/testPolyfills.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|svg|ttf|woff|woff2)$": "<rootDir>/.testconfig/fileMock.js",
      "\\.(css)$": "identity-obj-proxy"
    }
  },
  "dependencies": {
    "@types/storybook__addon-actions": "^3.0.3",
    "@types/storybook__addon-info": "^3.2.2",
    "@types/storybook__addon-knobs": "^3.2.3",
    "@types/storybook__react": "^3.0.7",
    "styled-components": "^3.2.5"
  }
}
